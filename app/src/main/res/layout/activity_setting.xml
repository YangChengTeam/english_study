<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <yc.com.english_study.base.widget.MainToolBar
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/t10dp"
            android:paddingRight="@dimen/t10dp">

            <RelativeLayout
                android:id="@+id/rl_version_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/t52dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/version_check"
                    android:textColor="@color/black_222" />

                <TextView
                    android:id="@+id/tv_version_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/right_arrow"
                    android:drawablePadding="@dimen/t8dp"
                    android:text="2.2.3"
                    android:textColor="@color/gray_999"
                    android:textSize="@dimen/t13sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#eff2f7" />

            <RelativeLayout
                android:id="@+id/rl_cache"
                android:layout_width="match_parent"
                android:layout_height="@dimen/t52dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/clear_cache"
                    android:textColor="@color/black_222" />

                <TextView
                    android:id="@+id/tv_cache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="1.43M"
                    android:textColor="@color/gray_999"
                    android:textSize="@dimen/t13sp" />
            </RelativeLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/t52dp"
            android:layout_marginTop="@dimen/t10dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="@color/black_222"
            android:textSize="@dimen/t15sp" />
    </LinearLayout>
</layout>