<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/t20dp"
            android:layout_marginRight="@dimen/t10dp"
            android:background="@drawable/user_policy_bg"
            android:paddingTop="@dimen/t15dp"
            android:paddingBottom="@dimen/t15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:orientation="vertical"
                android:paddingLeft="@dimen/t25dp"
                android:paddingRight="@dimen/t25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="用户协议"
                    android:textColor="@color/black"
                    android:textSize="@dimen/t18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/t15dp"
                    android:lineSpacingExtra="@dimen/t5dp"
                    android:text="@string/user_policy" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/t10dp"
            android:src="@mipmap/close" />

    </FrameLayout>
</layout>